{
    "compilerOptions": {
        "target": "ESNext",
        "strict": true,
        "types": [
            "@types/node",
            "@types/jest",
        ],
        "module": "ESNext",
        "moduleResolution": "Node",
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist/esm",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true
    }
}