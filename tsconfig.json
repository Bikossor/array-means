{
  "compilerOptions": {
    "target": "ES5",
    "strict": true,
    "types": ["@types/node", "@types/jest"],
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "dist/types",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true
  },
  "include": ["src/"],
  "exclude": ["**/*.test.ts", "dist/", "test/"]
}
